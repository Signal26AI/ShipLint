    </section>

    <!-- FAQ SECTION -->
    <section id="faq" class="py-20 sm:py-28 bg-surface-800" aria-labelledby="faq-heading">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
